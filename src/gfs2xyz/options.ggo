package "gfs2xyz"
purpose "extract ascii grids of scalar fields in gts files"

option "index"		i	"write i,j indices"		flag	off
option "output"		o	"output to file"		string	no
option "scalar"		s	"name of variable to write"	string	default="P" no
option "verbose"	v	"verbose"			flag	off

text "\nSee gfs2xyz(1) for more details"

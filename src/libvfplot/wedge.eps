% testbed for curved wedge glyph
% $Id: wedge.eps,v 1.2 2008/06/24 22:41:19 jjg Exp jjg $

/RAD 57.295779 def

% CLR - curved left/right 
% width
% angle of curvature
% medial radius 
% angle of rotation
% centre of rotation
% left/right indicator

/CLR {
    gsave

    /yr exch def

    translate rotate
    1 yr scale
    
    /rm exch def 
    /t exch def
    /w exch def
    
    /w2 w 2 div def
    /w6 w 6 div def 	
    /ro rm w2 add def 
    /ri rm w2 sub def
    /lo ro t mul RAD div def
    /lm rm t mul RAD div def
    /li ri t mul RAD div def
    /lm3 lm 3 div def
    /ct t cos def
    /st t sin def
    
    newpath
    ro 0 moveto % p0
    ro w6 sub
    lo 3 div  % p1
    rm w6 add ct mul lm3 st mul add
    rm w6 add st mul lm3 ct mul sub % p2
    rm ct mul
    rm st mul % p3
    curveto
    rm w6 sub ct mul lm3 st mul add
    rm w6 sub st mul lm3 ct mul sub % q1
    ri w6 add
    li 3 div % q2
    ri 0 % q3
    curveto
    closepath
    fill
    
    grestore
} def

/CL {1 CLR} def
/CR {-1 CLR} def

0.9 setgray 200 85 300 0 0 0 CL
0.8 setgray 200 75 300 0 0 0 CL
0.7 setgray 200 65 300 0 0 0 CL
0.6 setgray 200 55 300 0 0 0 CL
0.5 setgray 200 45 300 0 0 0 CL
0.4 setgray 200 35 300 0 0 0 CL
0.3 setgray 200 25 300 0 0 0 CL
0.2 setgray 200 15 300 0 0 0 CL
0.1 setgray 200 05 300 0 0 0 CL

10 70 30 0   200 200 CL
10 70 30 90  200 200 CL
10 70 30 180 200 200 CL
10 70 30 270 200 200 CL

10 70 50 0   200 200 CR

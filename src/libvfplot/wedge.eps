% $Id: wedge.eps,v 1.5 2008/06/29 22:27:23 jjg Exp $

/RAD {57.295779 div} def
/DEG {57.295779 mul} def
/tan {dup sin 2 1 roll cos div} def

% CLR - curved left/right 
% width
% angle of curvature
% medial radius 
% angle of rotation
% centre of rotation
% left/right indicator
%
% Remark : the values w/6 and L/3 looked good to first order
% since for the optimal value for the circular case are
%
%   h = 4/3 tan(t/4) = 1/3 t +  1/144 t^3 + ...
%
% (p230 of M.Goldapp "Approximation of circular arcs by cubic 
% polynomials", CAGD 8 (1991) 227-238) so here we replace 1/3
% by h/t so
%
%   L/3 -> Lh/t = rh
%   w/6 -> wh/2t

/CLR {
    gsave

    /yr exch def

    translate rotate
    1 yr scale
    
    /rm exch def 
    /t exch def
    /w exch def
    
    /w2 w 2 div def
    /ro rm w2 add def 
    /ri rm w2 sub def
    /h 4 3 div t 4 div tan mul def
    /rmh rm h mul def
    /wh2t w2 h mul t RAD div def	
    /ct t cos def
    /st t sin def
    
    newpath
    ro 0 moveto % p0
    ro wh2t sub
    ro h mul  % p1
    rm wh2t add ct mul rmh st mul add
    rm wh2t add st mul rmh ct mul sub % p2
    rm ct mul
    rm st mul % p3
    curveto
    rm wh2t sub ct mul rmh st mul add
    rm wh2t sub st mul rmh ct mul sub % q1
    ri wh2t add
    ri h mul % q2
    ri 0 % q3
    curveto
    closepath
    fill
    
    grestore
} def

/CL {1 CLR} def
/CR {-1 CLR} def

/S {
gsave
translate
rotate
/len exch def
/sw exch def
/len2 len 2 div def
/sw2 sw 2 div def
newpath
len2 0 moveto 
len2 neg sw2 lineto
len2 neg sw2 neg lineto
closepath
gsave 0.784 setgray fill grestore
stroke
grestore
} def


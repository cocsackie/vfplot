package "vfplot"
version "@VERSION@"
purpose 
"Make a plot of a vector field, using deformed glyphs"

option "epsilon"   e    "visual epsilon"                string  default="0.3p" no
option "ellipses"  E    "plot bounding elipses"         flag    off
option "fill"      f    "arrow fill"                    string  no
option "geometry"  g    "image geometry"                string  default="5x3" no
option "head"      H    "head length/width ratios"      string  default="1.7/2.2" no
option "numarrows" n    "number of arrows"              int     default="100" no
option "output"    o	"output to file"		string	no
option "placement" p    "glyph placement"               string  default="hedgehog" no
option "pen"       P    "pen width"                     string  default="0.5m" no
option "scale"     s    "scale arrows"                  float   no
option "test"      t    "test field"                    string  no
option "verbose"   v	"verbose"			flag	off


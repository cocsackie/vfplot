# Makefile.in for vfplot

# $Id: Makefile.in,v 1.12 2008/01/18 23:09:19 jjg Exp jjg $
# help older versions of make

@SET_MAKE@

# Macros

VERSION   = @VERSION@
RUBBISH   = *~ 
CONFFILES = config.cache config.log config.status configure Makefile

# targets

default : all

all : 
	cd src ; $(MAKE) all ; cd ..

install : 
	cd src ; $(MAKE) install ; cd ..

test check :
	cd src ; $(MAKE) test ; cd ..

profile :
	cd src ; $(MAKE) profile ; cd ..

txt : CREDITS.txt CHANGES.txt INSTALL.txt

clean :
	cd src ; $(MAKE) clean ; cd ..
	$(RM) $(RUBBISH)

spotless veryclean :
	cd src ; $(MAKE) veryclean ; cd ..
	$(RM) $(CONFFILES) $(RUBBISH)
	autoconf
	rm -rf autom4te.cache/

dist : veryclean
	cd .. ; make vfplot.tar.gz ; cd vfplot

maint-dist : clean
	cd .. ; \
	tar -zcvf vfplot-maint.tar.gz vfplot ; \
	cd vfplot

# package documentation

vpath %.xml xml

.SUFFIXES : .txt .xml

.xml.txt :
	docbook2txt $<


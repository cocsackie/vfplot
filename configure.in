dnl Process this file with autoconf to produce a configure script.
dnl $Id: configure.in,v 1.27 2007/08/09 22:03:39 jjg Exp jjg $

AC_INIT(src/vfplot/main.c)

MAJOR_VERSION=0
MINOR_VERSION=8.1
VERSION="$MAJOR_VERSION.$MINOR_VERSION"

dnl whether to use the non-free but superior triangle library
dnl if not then we use the internal libvfdela library

AC_SUBST(NBODY)
AC_ARG_ENABLE(triangle,
        AC_HELP_STRING([--enable-triangle],[Use Shewchuck's triangulation library]),
        [NBODY=triangle])

AC_PROG_CC

if eval "test $GCC"; then
  CFLAGS="$CFLAGS -Wall"
fi

AC_PROG_MAKE_SET
AC_PROG_INSTALL

dnl AC_PATH_PROG(GSLCONFIG,gsl-config)
AC_PATH_PROG(GGO,gengetopt)

AC_HEADER_STDC

AC_CHECK_LIB(m,sin)
AC_CHECK_LIB(m,sincos)
AC_CHECK_LIB(cunit,CU_add_test)

AC_CHECK_FUNCS(sincos)

AC_SUBST(INSTALL_PROGRAM)
AC_SUBST(INSTALL_DATA)
AC_SUBST(VERSION)

AC_CONFIG_HEADER(src/include/config.h)

AC_OUTPUT([Makefile src/Common.mk])






